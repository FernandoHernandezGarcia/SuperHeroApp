@model SuperHeroApp.Models.SuperHero
@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "Eliminar SuperHéroe";
    Layout = "_Layout";
}

<h1 class="text-center mb-5">@ViewData["Title"]</h1>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="k-card k-shadow pt-4 pb-5 px-4">
      
      <h3 class="text-center mb-4">¿Estás seguro de eliminar este registro?</h3>
      
      <dl class="row mb-4">
        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(m => m.Nombre)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Nombre)</dd>

        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(m => m.Poder)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Poder)</dd>

        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(m => m.Debilidad)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Debilidad)</dd>

        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(m => m.Enemigo)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(m => m.Enemigo)</dd>
      </dl>

      @using (Html.BeginForm("Delete", "SuperHeroes", FormMethod.Post, new { @class = "k-form" }))
      {
          @Html.AntiForgeryToken()
          <input type="hidden" asp-for="Id" />

          <div class="text-center">
            @(Html.Kendo()
                .Button()
                .Name("btnDelete")
                .Content("Eliminar")
                .HtmlAttributes(new {
                    @class = "k-button k-danger me-3",
                    type   = "submit",
                    style  = "min-width:120px;"
                }))
            
            @(Html.Kendo()
                .Button()
                .Name("btnCancel")
                .Content("Cancelar")
                .HtmlAttributes(new {
                    @class   = "k-button k-secondary",
                    onclick  = "window.location.href='" + Url.Action("Index","SuperHeroes") + "';",
                    style    = "min-width:120px;"
                }))
          </div>
      }
    </div>
  </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
